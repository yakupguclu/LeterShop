@model CardModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <h1>Shopping Cart</h1>
        <div class="row mt-5">
            <div class="col-md-8">
                <div class="text-left">
                    <h4>Cart Items</h4>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CardItems)
                        {

                            <tr>
                                <td>
                                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-light"><img src="~/img/@item.ImageUrl" width="80" /></a>
                                </td>

                                <td>@item.Name</td>
                                <td>@item.Price.ToString("c")</td>
                                <td>@item.Quantity</td>
                                <td>@((item.Quantity * item.Price).ToString("c"))</td>
                                <td>
                                    <form asp-controller="Card" asp-action="DeleteFromCart" method="post">
                                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fa fa-times fa-fw"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">

                @if (Model.CardItems.Count > 0)
                {
                    <div class="text-left">
                        <h4>Cart Summary</h4>
                    </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Cart Total</th>
                                <td>@Model.TotolPrice().ToString("c")</td>
                            </tr>
                            <tr>
                                <th>Shipping</th>
                                <td>Free</td>
                            </tr>
                            <tr>
                                <th>Order Total</th>
                                <td>@Model.TotolPrice().ToString("c")</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="/" class="btn btn-primary">
                            <i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shopping
                        </a>
                        <a href="/Card/Checkout" class="btn btn-primary">
                            Checkout <i class="fa fa-arrow-circle-right fa-fw"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        No Product in Cart!
                    </div>
                }
            </div>
        </div>
    </div>


