@model Product

<div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="product-thumbnail">
        <div class="product-img-head">
            <div class="product-img">
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id"><img src="~/img/@Model.ImageUrl" alt="@Model.Name" class="img-fluid"></a>
            </div>
            <div class="ribbons"></div>
            <div class="ribbons-text">Yeni</div>
        </div>
        <div class="product-content">
            <div class="product-content-head">
                <h3 class="product-title"> <a href="#">@Model.Name</a></h3>
                <small class="text-muted">
                    <i class="fas fa-lira-sign"></i> @Model.Price
                </small>
                <br />
                <div class="product-rating d-inline-block">
                    <i class="fa fa-fw fa-star"></i>
                    <i class="fa fa-fw fa-star"></i>
                    <i class="fa fa-fw fa-star"></i>
                    <i class="fa fa-fw fa-star"></i>
                    <i class="fa fa-fw fa-star"></i>
                </div>

            </div>
            
            <div class="product-btn">
                
                @if (User.Identity.IsAuthenticated)
                {
                <form asp-controller="Card" asp-action="AddToCard" method="post" style="display:inline;">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-primary">Sepete Ekle</button>
                </form>
                }
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">Detaylar</a>
            </div>
        </div>
    </div>
</div>
